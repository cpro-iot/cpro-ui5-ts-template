<mvc:View controllerName="cpro.ui5.__kunde__.__projekt__.controller.TodoForm" xmlns:form="sap.ui.layout.form" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc">
    <Page navButtonPress="navToHome" showNavButton="true" title="{i18n>app-title}">
        <content>
            <form:Form id="contactForm" editable="true">
                <form:title>
                    <core:Title text="Enter your new todo data" />
                </form:title>
                <form:layout>
                    <form:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" />
                </form:layout>
                <form:formContainers>
                    <form:FormContainer>

                        <!-- Form control for the todo title attribute -->
                        <form:FormElement>
                            <form:label>
                                <Label labelFor="todoTitle" text="Todo title" />
                            </form:label>
                            <form:fields>
                                <Input required="true" fieldGroupIds="todoFormInput" id="todoTitle" value="{
                                    path: 'todo>/form/title', 
                                    type: 'sap.ui.model.type.String',
                                    constraints: {
                                        minLength: 3,
                                        maxLength: 15
                                    }}" placeholder="Please enter a title for your todo" />
                            </form:fields>
                        </form:FormElement>

                        <!-- Form control for the todo title attribute -->
                        <form:FormElement>
                            <form:label>
                                <Label labelFor="todoDescription" text="Todo description" />
                            </form:label>
                            <form:fields>
                                <Input required="true" fieldGroupIds="todoFormInput" id="todoDescription" value="{
                                    path: 'todo>/form/description',
                                    type: 'sap.ui.model.type.String',
                                    constraints: {
                                        minLength: 5,
                                        maxLength: 255
                                    }}" placeholder="Please enter a description for your todo" />
                            </form:fields>
                        </form:FormElement>

                        <!-- Form control for the completed attribute  -->
                        <form:FormElement>
                            <form:label>
                                <Label text="Mark as done" labelFor="todoCompleted" />
                            </form:label>
                            <form:fields>
                                <Switch id="todoCompleted" state="{todo>/active/completed}" customTextOn="Yes" customTextOff="No" />
                            </form:fields>
                        </form:FormElement>
                    </form:FormContainer>
                </form:formContainers>
            </form:Form>
        </content>
        <footer>
            <OverflowToolbar>
                <Button icon="sap-icon://bell" text="{= ${messages>/collection}.length }" visible="{= ${messages>/collection}.length > 0 }" press="toggleMessageManager" />
                <ToolbarSpacer />
                <Button text="{i18n>label-save}" type="Accept" press="onPressAcceptButton" />
                <Button text="{i18n>label-cancel}" type="Reject" press="onPressRejectButton" />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>