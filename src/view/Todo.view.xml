<mvc:View controllerName="cpro.ui5.__kunde__.__projekt__.controller.Todo" xmlns:form="sap.ui.layout.form" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc">
    <Page navButtonPress="navToHome" showNavButton="true" title="{i18n>app-title}">
        <content>
            <form:Form id="contactForm" editable="true">
                <form:layout>
                    <form:ResponsiveGridLayout />
                </form:layout>
                <form:formContainers>
                    <form:FormContainer>

                        <!-- Form control for the todo title attribute -->
                        <form:FormElement>
                            <form:label>
                                <Label labelFor="todoTitle" text="Todo title" />
                            </form:label>
                            <form:fields>
                                <Input id="todoTitle" value="{path: 'todo>/activeItem/title'}" placeholder="Please enter the contact's title" />
                            </form:fields>
                        </form:FormElement>

                        <!-- Form control for the completed attribute  -->
                        <form:FormElement>
                            <form:label>
                                <Label text="Mark as done" labelFor="todoCompleted" />
                            </form:label>
                            <form:fields>
                                <Switch id="todoCompleted" state="{todo>/activeItem/completed}" customTextOn="Yes" customTextOff="No" />
                            </form:fields>
                        </form:FormElement>
                    </form:FormContainer>
                </form:formContainers>
            </form:Form>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button text="{i18n>label-save}" type="Accept" />
                <Button text="{i18n>label-cancel}" type="Reject" />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>